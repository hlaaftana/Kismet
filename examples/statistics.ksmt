defn [mean l] [[/ sum size] l]

defn [median l] {
  s: size l
  d: div s 2
  or? [odd? s] l[d] [div [+ l[d] l[prev d]] 2]
}

defn [standard_deviation l] {
  m: mean l
  s: 0
  `for:` [a l] {
    incr s [squared [- a m]]
  }
  sqrt [/ s [prev [size l]]]
}

defn [skewness l] [/ [* 3 [- mean median](l)]] [standard_deviation l]]