defn strip_mentions(content) content.replace("@", "@\u{200b}")

defcmd tag {
  "set" name [content] {
    guild_data[tags].get_or_set({#}).[args[1]]: {#
      "content": args[2],
      "author": message.author.id
    }
    "Successful"
  }

  "author" name ("Author for tag " name " is "
    guild_data.tags[name].author.user())

  name {
    [if null?(a: ?? guild_data.tags[name].content)
      strip_mentions(a)
      "Invalid tag"]
  }
}